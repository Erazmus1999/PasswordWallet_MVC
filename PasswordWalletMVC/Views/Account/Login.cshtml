@model PasswordWalletMVC.Models.User

@{
    ViewData["Title"] = "Login";
}

<h1>Login</h1>

<div class="row">
    <div class="col-md-4">
        <form asp-action="Login">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Login" class="control-label"></label>
                <input asp-for="Login" class="form-control" />
                <span asp-validation-for="Login" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PasswordHash">Hasło</label>
                <input type="password" asp-for="PasswordHash" class="form-control" id="passwd" />
                <input type="checkbox" onclick="myFunction()">Show password
                <span asp-validation-for="PasswordHash" class="text-danger"></span>

                @*<label asp-for="PasswordHash" class="control-label">Password</label>
                <input asp-for="PasswordHash" class="form-control" />
                <span asp-validation-for="PasswordHash" class="text-danger"></span>*@
            </div>

            <div class="form-group">
                <input type="submit" value="Login" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
<div>
    <a asp-controller="Account" asp-action="Register" class="btn btn-primary button-form">Create Account</a>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
    <script type="text/javascript">
        function myFunction() {
            var x = document.getElementById("passwd");
            if (x.type === "password") {
                x.type = "text";
            } else {
                x.type = "password";
            }
        }

    </script>